RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^phoenix/faq$ index.php?p=faq
RewriteRule ^phoenix/chat$ index.php?p=chat
RewriteRule ^phoenix/chat/([a-zA-Z0-9_.\-/]+)$ bin/ice_queen/alpha/$1 [L,QSA]
RewriteRule ^phoenix/user/([a-zA-Z0-9_\-]+)$ phoenix/index.php?p=user&name=$1 [L,QSA]
RewriteRule ^phoenix/faq/([a-zA-Z][a-zA-Z0-9_\-]+)$ index.php?p=faqq&id=$1 [L,QSA]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^phoenix/register$ index.php?p=register [L,QSA]
RewriteRule ^phoenix/do/([a-zA-Z0-9_\-/]+)$ action.php?p=$1 [L,QSA]
RewriteRule ^reloaded/tag/(.+)$ ?p=tag&text=$1 [L,QSA]

php_flag display_errors on

  AuthType Basic
  AuthName "Authorization for chit-chat required"
  AuthMySQLHost localhost
  AuthMySQLUser ccbeta
  AuthMySQLPassword IkJ84nZT
  AuthMySQLDB ccbeta
  AuthMySQLUserTable merlin_users
  AuthMySQLNameField user_name
  AuthMySQLPasswordField user_password
  AuthMySQLPwEncryption md5
  AuthMySQLEnable On
  Require valid-user
  
