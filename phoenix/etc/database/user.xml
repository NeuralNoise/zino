<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="xml2sql.xsl"?>
<project name="Excalibur" version="Phoenix 7.0" spec="https://code.kamibu.com/wiki/Phoenix/User">
    <database name="cclive" type="mysql">
        <table name="merlin_users">
            <field name="user_id" type="int" autoincrement="yes" />
            <field name="user_name" type="char" size="32" />
            <field name="user_password" type="char" size="32" />
            <field name="user_authtoken" type="char" size="32" />
            <field name="user_registerhost" type="unsigned int" />
            <field name="user_created" type="datetime" />
            <field name="user_rights" type="int" />
            <field name="user_icon" type="int" ref="merlin_images.image_id" />
            <field name="user_email" type="varchar" size="256" />
            <field name="user_emailverified" type="enum">
                <value default="yes">no</value>
                <value>yes</value>
            </field>
			<field name="user_subdomain" type="char" size="32" />
            <field name="user_gender" type="enum">
                 <value>-</value>
                 <value>m</value>
                 <value>f</value>
            </field>
            <field name="user_signature" type="text" size="256" />
            <field name="user_lastlogon" type="datetime" />
            <field name="user_lastprofedit" type="datetime" />
            <field name="user_lastactive" type="datetime" />
            <field name="user_locked" type="enum" default="no">
                <value>yes</value>
                <value>no</value>
            </field>
        </table>
        <table name="merlin_usersettings">
            <field name="setting_userid" type="int" ref="merlin_users.user_id" />
            <field name="setting_email_profile" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_email_photos" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_email_journals" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_email_replies" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_email_friends" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_notify_profile" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_notify_photos" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_notify_journals" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_notify_replies" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
            <field name="setting_notify_friends" type="enum">
                <value>yes</value>
                <value>no</value>
            </field>
        </table>
        <table name="merlin_userprofiles">
            <field name="profile_userid" ref="merlin_users.user_id" />
            <field name="profile_location" type="int" ref="merlin_places.place_id" />
            <field name="user_dob" type="datetime" />
            <field name="profile_education" type="enum">
                <value>-</value>
                <value>elementary</value>
                <value>gymnasium</value>
                <value>lyceum</value>
                <value>university</value>
                <value>finished</value>
            </field>
            <field name="profile_sexualorientation" type="enum">
                <value>-</value>
                <value>straight</value>
                <value>bi</value>
                <value>gay</value>
            </field>
            <field name="user_religion" type="enum">
                <value>-</value>
                <value>christian</value>
                <value>muslim</value>
                <value>atheist</value>  
                <value>agnostic</value>
                <value>nothing</value>
            </field>
            <field name="user_politics" type="enum">
                <value>-</value>
                <value>right</value>
                <value>left</value>
                <value>center</value>
                <value>radical left</value>
                <value>radical right</value>
                <value>nothing</value>
            </field>
            <field name="user_aboutme" type="text" />
            <field name="user_mood" type="int" ref="merlin_moods.mood_id" />
            <field name="user_eyecolor" type="enum">
                <value>-</value>
                <value>black</value>
                <value>brown</value>
                <value>green</value>
                <value>blue</value>
                <value>grey</value>
            </field>
            <field name="user_haircolor" type="enum">
                <value>-</value>
                <value>black</value>
                <value>brown</value>
                <value>red</value>
                <value>blond</value>
                <value>highlights</value>
                <value>dark</value>
                <value>grey</value>
                <value>skinhead</value>
            </field>
            <field name="user_height" type="tinyint" />
            <field name="user_weight" type="tinyint" />
            <field name="user_smoker" type="enum">
                <value>-</value>
                <value>yes</value>
                <value>no</value>
                <value>socially</value>
            </field>
            <field name="user_drinker" type="enum">
                <value>-</value>
                <value>yes</value>
                <value>no</value>
                <value>socially</value>
            </field>
            <!-- <tags>
            <field name="user_favmovies" type="text" />
            <field name="user_favbooks" type="text" />
            <field name="user_favsongs" type="text" />
            <field name="user_favartists" type="text" />
            <field name="user_favvideogames" type="text" />
            <field name="user_favtvshows" type="text" />
            </tags> -->
            <field name="user_favquote" type="text" />
            <field name="user_skype" type="varchar" size="256" />
            <field name="user_msn" type="varchar" size="256" />
            <field name="user_gtalk" type="varchar" size="256" />
            <field name="user_yim" type="varchar" size="256" />
            <field name="user_homepage" type="varchar" size="256" />
            <field name="user_firstname" type="varchar" size="256" />
            <field name="user_lastname" type="varchar" size="256" />
        </table>
        <table name="merlin_moods">
            <field name="mood_id" type="int" autoincrement="yes" />
            <field name="mood_label" type="text" />
            <field name="mood_icon" type="int" ref="merlin_images.image_id" />
        </table>
    </database>
</project>
